# ELT Pipelines Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# GitHub Pipeline Configuration
# =============================================================================
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPOS=dlt-hub/dlt,dagster-io/dagster
GITHUB_RESOURCES=issues,pull_requests

# =============================================================================
# Postgres Source Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=mydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_SSLMODE=prefer

# =============================================================================
# Destination: DuckDB (default for both pipelines)
# =============================================================================
DESTINATION_TYPE=duckdb
DEST_DUCKDB_PATH=./data.duckdb

# =============================================================================
# Alternative Destinations (uncomment to use)
# =============================================================================

# Snowflake
# DESTINATION_TYPE=snowflake
# SNOWFLAKE_ACCOUNT=xy12345.us-east-1
# SNOWFLAKE_USER=myuser
# SNOWFLAKE_PASSWORD=mypassword
# SNOWFLAKE_DATABASE=analytics
# SNOWFLAKE_WAREHOUSE=compute_wh
# SNOWFLAKE_ROLE=analyst

# BigQuery
# DESTINATION_TYPE=bigquery
# GCP_PROJECT_ID=my-project-123
# GCP_CREDENTIALS={"type": "service_account", ...}

# Postgres (as destination)
